.login {
    height: 100vh;
    width: 100%;
    background-image: url('/assets/main_img_2.jpeg');
    background-position: center;
    background-size: cover;
    h3 {
        text-align: center;
    }
    &__container {
        max-width: 300px;
        // width: 250px;
        // height: 250px;
        background-color: white;
        border: 1px solid #ccc;
        padding: 15px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
        top: 30%;
        transform: translateY(-30%);
        .form__element {
            display: block;
            margin-bottom: 15px;
            label {
                display: block;
            }
            .btn {
                display: block;
                padding: 5px;
                background-color: $purple;
                border-radius: 4px;
                border: none;
                color: white;
            }
            .btn.full {
                width: 100%;
            }
        }
        input {
            border-radius: 4px;
            width: 100%;
            outline:none;
            border: 1px solid #ccc;
            box-shadow: 0px 0px 0px 0px;
            // outline: none;
            // border-top: none;
            // border-left: none;
            // border-right: none;
        }
    }
}